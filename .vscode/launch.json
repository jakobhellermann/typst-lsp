{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Extension",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}/addons/vscode"
            ],
            "outFiles": [
                "${workspaceFolder}/addons/vscode/out/**/*.js"
            ],
            "preLaunchTask": "Build"
        },
        {
            "name": "Run Extension (Release)",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}/addons/vscode"
            ],
            "outFiles": [
                "${workspaceFolder}/addons/vscode/out/**/*.js"
            ],
            "preLaunchTask": "Build (Release)"
        }
    ]
}